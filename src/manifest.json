{
  "name": "Mastodon View Profile on My Mastodon Instance",
  "action": {},
  "manifest_version": 3,
  "version": "0.2",
  "description": "Shows the current Mastodon Profile from your Mastodon instance",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html"
}
